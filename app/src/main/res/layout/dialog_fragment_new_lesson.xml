<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="20dp">

    <Spinner
        android:id="@+id/dialog_fragment_new_lesson_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:spinnerMode="dropdown"
        android:dropDownWidth="200dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dialog_fragment_new_lesson_start_time"
            android:textColor="@android:color/black"
            android:paddingLeft="8dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_weight="1"/>

        <TimePicker
            android:id="@+id/dialog_fragment_new_lesson_time_start"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:timePickerMode="spinner" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dialog_fragment_new_lesson_end_time"
            android:textColor="@android:color/black"
            android:paddingLeft="8dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_weight="1"/>

        <TimePicker
            android:id="@+id/dialog_fragment_new_lesson_time_end"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:timePickerMode="spinner" />
    </LinearLayout>


</LinearLayout>