<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsFragment"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Importation d'un emploi du temps"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="@android:color/black"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Le fichier doit être situé dans : SD/Android/data/com.saint_gab.sacconnecte/files/calendar.ical"
        android:paddingHorizontal="15dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/holo_red_dark"
        android:paddingHorizontal="15dp"
        android:text="Attention : L'importation va écraser l'emploi du temps actuel"/>

    <Button
        android:id="@+id/fragment_settings_import_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Importer un fichier .ical"/>

</LinearLayout>